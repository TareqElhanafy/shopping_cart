<%- include("layouts/header") -%>
  <div class="col-xs-12 col-md-9">
    <h1 class="text-center">
      Our Products
    </h1>
    <div class="row">
        <% if(products){%>
      <% products.forEach(function(product){%>
        <div class="col-xs-12 col-md-4 text-center" style="margin-top: 20px; margin-bottom: 20px;">
          <a href="">
             <img src="/images/products/<%= product.id %><%= product.image %>"
              style="height: 150px; width: 150px;" alt="">
          </a>
          <h3>
            <%= product.name %>
          </h3>
          <h4>$<%= product.price %>
          </h4>
          <a href="">View Details</a>
        </div>
        <%}) %>
        <% } %> 
    </div>
  </div>
  <%- include("layouts/footer") -%>